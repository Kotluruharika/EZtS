def check_prime(m):
    flag=0
    if m<1:
        flag=1
    elif m==1:
        flag=0
    else:
        for i in range(2,(m//2)+1):
            if m%i==0:
                flag=1
                break
    if flag==0:
        return 1
    else:
        return 0
result=[]    
N=int(input("enter the prime number"))
flag=0
k=N+1 #because nxt number 
while flag<1: #0<1
    check_prime(k)  #3either 0 or 1  ##falg==1 when prime number ##
    
